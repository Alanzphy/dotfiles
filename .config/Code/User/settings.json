{
  // "search.followSymlinks": false,
  // Editor
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "phase",
  // "editor.cursorWidth": 3,
  "editor.minimap.autohide": true,
  "editor.mouseWheelZoom": true,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.fontFamily": "JetBrains Mono, mono, monospace",
  "editor.fontWeight": "800",
  "editor.linkedEditing": true,
  "editor.fontLigatures": true,
  "editor.minimap.renderCharacters": false,
  "editor.lineHeight": 2.2,
  "editor.scrollBeyondLastLine": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "Ë†": true
  },
  "editor.codeActionsOnSave": {
    "html.autoClosingTags": true,
    "source.organizeImports": true
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.autoClosingBrackets": "always",
  "editor.padding.top": 15,
  "editor.inlineSuggest.enabled": true,
  "editor.scrollbar.verticalScrollbarSize": 12,
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.scale": 2,
  "editor.minimap.size": "fill",

  "editor.tabSize": 2,
  "editor.fontSize": 18,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80, 120],
  "editor.renderLineHighlight": "all",
  "editor.cursorStyle": "block",
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": false,
  "editor.lineNumbers": "interval",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.guides.indentation": false,
  "editor.stickyScroll.enabled": true,
  "editor.formatOnPaste": true, //Cuando pegas algo al editor se formatea dependiendo el formateador que tengas por defecto
  "editor.quickSuggestions": {
    "strings": true,
    "comments": true
  },
  "editor.smoothScrolling": true,

  // Workbench
  "workbench.iconTheme": "moxer-icons",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.tree.indent": 8,
  "workbench.editor.showTabs": false,
  "workbench.startupEditor": "none",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right",
  // "workbench.layoutControl.enabled": false,
  // "workbench.statusBar.visible": false,
  // "workbench.experimental.settingsProfiles.enabled": true,
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#c91bc048",
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f"
  },

  // Others
  "terminal.integrated.fontFamily": "JetBrainsMono NF",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.smoothScrolling": true,
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "onFocusChange",
  "explorer.confirmDragAndDrop": false,
  "typescript.suggest.paths": false, // Esto sirve para desactivar el autocompletado de directorio nativo de vscode y funcione mejor la extension de path intellisense
  // "remote.SSH.connectTimeout": 1200, //Aumenta el tiempo para poder ingresar las credenciales y no se recargue al poco tiempo

  "window.commandCenter": true,
  "workbench.layoutControl.enabled": false,
  // "window.titleBarStyle": "native",
  "window.menuBarVisibility": "toggle",

  //Extensions
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "cSpell.language": "en,es",

  "symbols.hidesExplorerArrows": false,
  "code-runner.runInTerminal": true,
  "liveServer.settings.donotVerifyTags": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "gitlens.hovers.currentLine.over": "line",
  "resmon.show.battery": false,
  "resmon.updatefrequencyms": 1000,

  "indentRainbow.colors": [
    "rgba(247, 37, 133,0.15)",
    "rgba(181, 23, 158,0.15)",
    "rgba(114, 9, 183, 0.15)",
    "rgba(86, 11, 173,0.15)",
    "rgba(72, 12, 168,0.15)",
    "rgba(58, 12, 163,0.15)",
    "rgba(63, 55, 201,0.15)",
    "rgba(63, 55, 201,0.1)",
    "rgba(63, 55, 201,0.05)",
    "rgba(63, 55, 201,0.025)"
  ],

  "customizeUI.activityBar": "bottom",
  "customizeUI.activityBarHideSettings": false,
  // "customizeUI.titleBar": "inline",
  "customizeUI.stylesheet": {
    ".monaco-pane-view .monaco-split-view2.vertical>.monaco-scrollable-element.mac": "height: calc(100% - 90px) !important;",
    ".monaco-split-view2.vertical>.monaco-scrollable-element.mac>.split-view-container>.split-view-view.visible>.part.sidebar.left>.content": "height: 100vh !important",
    "div.monaco-grid-view > div > div > div.monaco-scrollable-element.mac > div.split-view-container > div.split-view-view.visible > div > div > div.monaco-scrollable-element.mac > div.split-view-container > div:nth-child(1) > div > div > div.monaco-scrollable-element.mac > div.split-view-container > div:nth-child(2)": "bottom: 0px !important; top: unset !important; height: 48px !important",
    ".monaco-pane-view .monaco-scrollable-element.mac > div.split-view-container > div:not(:first-child)": "transform: translateY(-20px) !important",
    ".part.activitybar.left": "background-color: unset !important",
    "body.activity-bar-at-bottom .monaco-workbench .activitybar > .content .composite-bar": "margin-left: 0 !important",
    "body.inline-title-bar .part>.title>.title-actions .action-label": "min-width: unset !important",
    ".monaco-workbench .part.sidebar>.title>.title-label h2": "display: none;",
    ".part.activitybar.left.bordered": "border: 1px solid transparent!important",
    ".activitybar .composite-bar > .monaco-action-bar": "padding: 0 10px 0 6px",
    ".activitybar .composite-bar > .monaco-action-bar > .actions-container": "justify-content: space-evenly; max-width: 300px; border: 1px solid #ffffff1c; border-radius: 6px",
    ".pane-header": "padding-left: 10px;",
    "body.activity-bar-at-bottom .monaco-workbench .activitybar > .content": "flex-direction: column !important"
  },
  "window.titleBarStyle": "custom",
  "terminal.integrated.defaultProfile.windows": "Git Bash"
}
